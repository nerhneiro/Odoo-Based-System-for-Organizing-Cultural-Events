<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_management_event_form" model="ir.ui.view">
        <field name="name">management.event.form</field>
        <field name="model">management.event</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="uid in guest_user_ids"/>
                        <field name="place" readonly="uid in guest_user_ids"/>
                        <field name="start" readonly="uid in guest_user_ids"/>
                        <field name="end" readonly="uid in guest_user_ids"/>
                        <field name="meeting_url" widget="url" readonly="uid in guest_user_ids"/>
                        <field name="description" readonly="uid in guest_user_ids"/>
                        <field name="attachment_id" readonly="uid in guest_user_ids"/>
                        <field name="number_of_guests" readonly="uid in guest_user_ids"/>
                        <!--                        <field name="duration"/>-->
                        <field name="address" readonly="uid in guest_user_ids"/>
                        <field name="organizer_ids" widget="many2many_tags" readonly="uid in guest_user_ids" invisible="not organizer_ids"/>
                        <field name="guest_ids" invisible="uid in guest_user_ids"/>
                        <field name="speaker_ids" readonly="uid in guest_user_ids"/>
                        <field name="vip_guest_ids" invisible="uid in guest_user_ids"/>
                        <field name="guest_user_ids" invisible="uid in guest_user_ids"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_management_event_tree" model="ir.ui.view">
        <field name="name">management.event.tree</field>
        <field name="model">management.event</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="place"/>
                <field name="start"/>
                <field name="end"/>

                <field name="meeting_url" widget="url"/>
                <field name="description"/>
                <field name="attachment_id"/>
                <field name="number_of_guests"/>
                <!--                        <field name="duration"/>-->
                <field name="address"/>
                <field name="organizer_ids" widget="many2many_tags"/>
                <field name="guest_ids"/>
                <field name="speaker_ids"/>
                <field name="vip_guest_ids"/>
                <field name="guest_user_ids"/>
            </tree>
        </field>
    </record>
    <record id="view_management_event_search" model="ir.ui.view">
        <field name="name">management.event.search</field>
        <field name="model">management.event</field>
        <field name="arch" type="xml">
            <search>
                <filter name="filter_organize" string="Attend as a guest" domain="[('guest_user_ids', 'in', [uid])]"/>
                <filter name="filter_organize" string="Attend as a vip-guest" domain="[('vip_guest_user_ids', 'in', [uid])]"/>
                <filter name="filter_organize" string="Attend as a speaker" domain="[('speaker_user_ids', 'in', [uid])]"/>
                <filter name="filter_organize" string="Organize" domain="[('organizer_ids','in',[uid])]"/>
            </search>
        </field>
    </record>
    <record id="action_management_event" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">management.event</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_events"
              name="Events"
              parent="menu_management_root"
              action="action_management_event"
              sequence="10"/>

</odoo>
